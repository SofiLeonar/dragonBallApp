<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopreguntas"
    tools:context=".Preguntas">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/leonardelli_sofia"
        android:textColor="@color/yellow"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="137dp"
        android:layout_height="103dp"
        android:contentDescription="@string/imageView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/titulo" />

    <TextView
        android:id="@+id/textPregunta"
        android:layout_width="310dp"
        android:layout_height="167dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/cuadro_dialogos"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/opcionesGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textPregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <RadioButton
            android:id="@+id/respuesta1"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/cuadro_dialogos"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="RadioButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textPregunta" />

        <RadioButton
            android:id="@+id/respuesta2"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cuadro_dialogos"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="RadioButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/respuesta1" />

        <RadioButton
            android:id="@+id/respuesta3"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cuadro_dialogos"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="RadioButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/respuesta2" />

        <RadioButton
            android:id="@+id/respuesta4"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cuadro_dialogos"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="RadioButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/respuesta3" />
    </RadioGroup>
    <ImageView
        android:id="@+id/enemigo"
        android:layout_width="199dp"
        android:layout_height="216dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/enemigo1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/preguntaBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="80dp"
        android:text="Siguiente"
        android:padding="10dp"
        android:background="@drawable/botones"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>